/* pages/main/main.wxss */
.swiper_banner{
    width: 100%;
    height: 150px;
}
.slide-image{
    width: 100%;
    height: 100%;
}
.line{
    width: 100%;
    height: 10px;
    background-color: #e6e6fa;
}
.title{
    width: 100%;
    height: 36px;
    border-bottom: 1px solid #ddd;
}
.title_wrp{
    height:22px;
    padding-top: 8px;
    margin-left: 4px;
    margin-right: 4px;
    font-size: 14px;
    color: #a9a9a9;
    flex-direction:row;
    display: flex;
    justify-content:space-between;
}
.title_wrp_left{
    flex-direction:row;
    display: flex;
}
.title_item1{
    width: 82px;
}
.title_item2{
    width: 34px;
    padding-left: 4px;
    border:1px solid #a9a9a9;
    border-radius: 6px;
}
.title_item3{
    width:58px;
}
.icon_right{
    height: 10px;
    width: 16px;
}
.title_wrp_right{
   flex-direction:row;
   display: flex;
}
.activity_list{
    width: 100%;
    height: 160px;
    border-bottom:1px solid #ddd;
}
.content_wrp{
    padding: 15px;
    height: 130px;
    flex-direction:row;
    display: flex;
}
.img_wrp{
    width: 84px;
    height: 120px;
    padding-top: 5px;
}
.activity_img{
    width: 84px;
    height: 120px;
}
.text_wrp{
    width: 70%;
    height: 120px;
    padding-top: 5px;
    margin-left: 20px;
}
.activity_title{
    height: 40px;
    font-size: 14px;
    font-weight: bold;
    overflow:hidden; 
    text-overflow:ellipsis;
    display:-webkit-box; 
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2; 
}
.activity_inform{
    margin-top:12px;
    height: 32px;
    font-size: 12px;
    color: #a9a9a9;
}
.activity_price{
    margin-top: 12px;
    font-size: 16px;
    font-weight: bold;
    color: #ff4500;
    flex-direction:row;
    display: flex;
}
.activity_price_item2{
    font-size: 10px;
    margin-left: 4px;
    margin-top: 6px;
}